<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="web.dao.face.GroupDao">
	
	<sql id="selectGroup">
        SELECT 
            board_no,
            title,
            location,
            post_date,
            hit,
            content,
            delete_status,
            user_id,
            board_cate,
            (SELECT recruit_status
             FROM grouptb g
             WHERE g.board_no = b.board_no)
        FROM boardtb b
	</sql>
	
    <select id="selectCntAll" resultType="int" parameterType="web.util.Paging">
    SELECT count(*) FROM (
    <include refid="selectGroup" />
    )
	</select>

    <select id="selectBoardList" resultType="BoardTb" parameterType="web.util.Paging" >
        SELECT * FROM (
        SELECT rownum rnum, B.* FROM (
        <include refid="selectGroup" />
        ORDER BY board_no DESC
        ) B
    	) WHERE rnum BETWEEN #{startNo} AND #{endNo}
    </select>

	<!-- 게시판 상세 조회 -->

	<update id="updateHit" parameterType="BoardTb">
		UPDATE boardtb
		<set>
			hit = hit + 1,
		</set>
		<where>
			AND board_no = #{boardNo}
		</where>
	</update>
	
	<select id="selectByBoardNo" resultType="BoardTb" parameterType="BoardTb">
		<include refid="selectGroup" />
		<where>
			AND board_no = #{boardNo}
		</where>
	</select>



</mapper>
